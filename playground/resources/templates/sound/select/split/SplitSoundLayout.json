{
  "layouts": {
    "Single-Sound-Select-Layout": {
      "Selector": {
        "UIFocus": "Sound",
        "UIMode": "Select"
      },
      "Conditions": [
        "isSplitSound"
      ],
      "Controls": {
        "Header": {
          "Class": "InvertedLabel",
          "Position": "0, 0",
          "Events": "EditBufferTypeText => Text[Text]"
        },
        "Name": {
          "Class": "WideHighlightLabel",
          "Position": "64, 0",
          "Events": "EditBufferName => Text[Text]"
        },
        "ButtonA": {
          "Class": "Button",
          "Position": "BUTTON_A",
          "Events": "SelectVGButtonText => Text[Text]"
        },
        "ButtonB": {
          "Class": "Button",
          "Position": "BUTTON_B",
          "Init": {
            "Text[Text]": "Mono.."
          }
        },
        "ButtonC": {
          "Class": "Button",
          "Position": "BUTTON_C",
          "Init": {
            "Text[Text]": "Unison.."
          }
        },
        "ButtonD": {
          "Class": "Button",
          "Position": "BUTTON_D",
          "Init": {
            "Text[Text]": "Master.."
          }
        },
        "Left": {
          "Class": "SplitVoiceGroupI",
          "Position": "15, 16",
          "Init": {
            "VoiceGroupIdentifier[Text]": "I",
            "UpperText[Text]": "+12.00 st",
            "LowerText[Text]": "-3.5 dB",
            "ANY[Highlight]": "true"
          },
          "Events": "isCurrentVGI => ANY[Highlight], VGIMasterTuneText => UpperText[Text], VGIMasterVolumeText => LowerText[Text]"
        },
        "Right": {
          "Class": "SplitVoiceGroupII",
          "Position": "145, 16",
          "Init": {
            "VoiceGroupIdentifier[Text]": "II",
            "UpperText[Text]": "+12.00 st",
            "LowerText[Text]": "-3.5 dB",
            "ANY[Highlight]": "false"
          },
          "Events": "isCurrentVGII => ANY[Highlight], VGIIMasterTuneText => UpperText[Text], VGIIMasterVolumeText => LowerText[Text]"
        },
        "Split": {
          "Class": "SplitPoint",
          "Position": "116, 18",
          "Events": "SplitPointValue => Text[Text]"
        }
      },
      "EventSinks": {
        "BUTTON_A": "ToggleVoiceGroup",
        "BUTTON_B": "OpenMonoParameterScreen",
        "BUTTON_C": "OpenUnisonParameterScreen",
        "BUTTON_D": "OpenMasterParameterScreen"
      }
    }
  }
}