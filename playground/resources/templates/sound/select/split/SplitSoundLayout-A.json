{
  "layouts": {
    "Single-Sound-Select-Layout-A": {
      "Selector": {
        "UIFocus": "Sound",
        "UIMode": "Select",
        "UIDetail": "ButtonA"
      },
      "Conditions": [
        "isSplitSound"
      ],
      "Controls": {
        "Header": {
          "Class": "InvertedLabel",
          "Position": "0, 0",
          "Events": "EditBufferTypeText => Text[Text]"
        },
        "Name": {
          "Class": "WideHighlightLabel",
          "Position": "64, 0",
          "Events": "EditBufferName => Text[Text]"
        },
        "ButtonA": {
          "Class": "HighlightButton",
          "Position": "BUTTON_A",
          "Events": "SelectVGButtonText => Text[Text]"
        },
        "ButtonB": {
          "Class": "Button",
          "Position": "BUTTON_B"
        },
        "ButtonC": {
          "Class": "Button",
          "Position": "BUTTON_C",
          "Init": {
            "Text[Text]": "Unison.."
          }
        },
        "ButtonD": {
          "Class": "Button",
          "Position": "BUTTON_D",
          "Init": {
            "Text[Text]": "Master.."
          }
        },
        "Left": {
          "Class": "SplitVoiceGroupI",
          "Position": "15, 16",
          "Init": {
            "VoiceGroupIdentifier[Text]": "I",
            "UpperText[Text]": "+12.00 st",
            "LowerText[Text]": "-3.5 dB",
            "ANY[Highlight]": "true"
          },
          "Events": "isCurrentVGI => ANY[Highlight], VGIUnisonText => UpperText[Text], VGIMasterText => LowerText[Text]"
        },
        "Right": {
          "Class": "SplitVoiceGroupII",
          "Position": "145, 16",
          "Init": {
            "VoiceGroupIdentifier[Text]": "II",
            "UpperText[Text]": "+12.00 st",
            "LowerText[Text]": "-3.5 dB",
            "ANY[Highlight]": "false"
          },
          "Events": "isCurrentVGII => ANY[Highlight], VGIIUnisonText => UpperText[Text], VGIIMasterText => LowerText[Text]"
        },
        "Split": {
          "Class": "SplitPoint",
          "Position": "116, 18",
          "Init": {
            "Text[Text]": "G#3"
          }
        }
      },
      "EventSinks": {
        "BUTTON_B": "SwitchToInitDetail",
        "BUTTON_C": "OpenUnisonParameter",
        "BUTTON_D": "OpenMasterParameter",
        "BUTTON_ENTER": "ToggleVoiceGroup"
      }
    }
  }
}