{
  "layouts": {
    "Layer-Sound-Select-Layout": {
      "Selector": {
        "UIFocus": "Sound",
        "UIMode": "Select",
        "UIDetail": "Init"
      },
      "Conditions": [
        "isLayerSound"
      ],
      "Controls": {
        "Header": {
          "Class": "InvertedLabel",
          "Position": "0, 0",
          "Events": "EditBufferTypeText => Text[Text]"
        },
        "Name": {
          "Class": "WideHighlightLabel",
          "Position": "64, 0",
          "Events": "EditBufferName => Text[Text]"
        },
        "ButtonA": {
          "Class": "Button",
          "Position": "BUTTON_A",
          "Events": "SelectVGButtonText => Text[Text]"
        },
        "ButtonB": {
          "Class": "Button",
          "Position": "BUTTON_B",
          "Init": {
            "Text[Text]": "Mono.."
          }
        },
        "ButtonC": {
          "Class": "Button",
          "Position": "BUTTON_C",
          "Init": {
            "Text[Text]": "Unison.."
          }
        },
        "ButtonD": {
          "Class": "Button",
          "Position": "BUTTON_D",
          "Init": {
            "Text[Text]": "Master.."
          }
        },
        "Upper": {
          "Class": "LayerVoiceGroupI",
          "Position": "45, 16",
          "Init": {
            "VoiceGroupIdentifier[Text]": "I"
          },
          "Events": "isCurrentVGI => ANY[Highlight], VGIMasterTuneText => Unison[Text], VGIMasterVolumeText => Master[Text]"
        },
        "Lower": {
          "Class": "LayerVoiceGroupII",
          "Position": "45, 32",
          "Init": {
            "VoiceGroupIdentifier[Text]": "II",
            "Unison[Text]": "",
            "Master[Text]": ""
          },
          "Events": "isCurrentVGII => ANY[Highlight], VGIIMasterTuneText => Unison[Text], VGIIMasterVolumeText => Master[Text]"
        }
      },
      "EventSinks": {
        "BUTTON_A": "SwitchToButtonADetail",
        "BUTTON_B": "OpenMonoParameterScreen",
        "BUTTON_C": "OpenUnisonParameterScreen",
        "BUTTON_D": "OpenMasterParameterScreen"
      }
    }
  }
}