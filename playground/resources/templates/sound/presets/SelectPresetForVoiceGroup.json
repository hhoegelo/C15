{
  "controls": {
    "PresetListBorder": {
      "Border" : {
        "Class": "Border",
        "Rect": "0, 0, 128, 64"
      }
    }
  },
  "layouts": {
    "PresetSelectionForVoiceGroupLayout": {
      "EventProvider": "IndependentPresetSelectionEvents",
      "Selector": {
        "UIFocus": "Sound",
        "UIMode": "Edit",
        "UIDetail": "SoundSelectPresetForVoiceGroup"
      },
      "Controls": {
        "ButtonA": {
          "Class": "Button",
          "Position": "BUTTON_A",
          "Init": {
            "Text[Text]": "Back"
          }
        },
        "PresetListBorder" : {
          "Class": "PresetListBorder",
          "Position": "64, 0"
        },
        "ButtonD": {
          "Class": "Button",
          "Position": "BUTTON_D",
          "Init": {
            "Text[Text]": "OK"
          }
        },
        "PreviousPreset": {
          "Class": "Preset",
          "Position": "64, 12",
          "Events": "PreviousNumber => Number[Text],PreviousName => Name[Text], PreviousType => Type[Text]"
        },
        "CurrentPreset": {
          "Class": "Preset",
          "Position": "64, 29",
          "Events": "CurrentNumber => Number[Text],CurrentName => Name[Text], CurrentType => Type[Text]"
        },
        "NextPreset": {
          "Class": "Preset",
          "Position": "64, 46",
          "Events": "NextNumber => Number[Text],NextName => Name[Text], NextType => Type[Text]"
        },
        "BankLabel": {
          "Class": "WideInvertedLabel",
          "Position": "64, 0",
          "Events": "PresetListBankName => Text[Text]"
        },
        "LeftButton": {
          "Class": "ArrowLeft",
          "Position": "65, 1",
          "Events": "CanLeft => ANY[Highlight]"
        },
        "RightButton": {
          "Class": "ArrowRight",
          "Position": "182, 1",
          "Events": "CanRight => ANY[Highlight]"
        }
      },
      "EventSinks": {
        "BUTTON_A": "SwitchToSoundFocus",
        "BUTTON_B": "Left",
        "BUTTON_C": "Right",
        "BUTTON_INC": "Down",
        "BUTTON_DEC": "Up",
        "BUTTON_D": "Commit",
        "BUTTON_ENTER": "Commit"
      }
    }
  },
  "styles": {
    "SelectPresetTextStyle": {
      "selector": {
        "ControlClasses": "Preset",
        "PrimitiveClasses": "Border",
        "ControlInstances": "CurrentPreset"
      },
      "styles": {
        "BackgroundColor": "C103",
        "Color": "C128"
      }
    },
    "PresetListBorderStyle": {
      "selector": {
        "ControlClasses": "PresetListBorder"
      }, 
      "styles": {
        "Color": "C128"
      }
    }
  }
}