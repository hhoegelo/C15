[Unit]
Description=Nonlinear-Labs Playground
After=syslog.target network.target systemd-modules-load.service install-update-from-usb.service internalstorage.mount bbbb.service
Wants=install-update-from-usb.service internalstorage.mount

[Service]
ExecStart=@C15_INSTALL_PATH@/playground/playground --bbbb=localhost
ExecStop=-@C15_INSTALL_PATH@/scripts/soled-exit-PG-message.sh
ExecStopPost=-@C15_INSTALL_PATH@/scripts/playground-stop-post.sh
Restart=on-failure
RestartSec=1
RestartPreventExitStatus=SIGKILL
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
